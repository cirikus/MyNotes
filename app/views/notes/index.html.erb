<h1>Listing notes</h1>
<div id="search">
    <%= form_tag search_notes_path, :method => "get", :class => "form-inline", :role => "search" do %>
      <div class="form-group">
      <%= text_field_tag :element, @element, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Search", :class => "btn btn-default" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Reset", :type => "reset", :class => "btn btn-default" %>
      </div>
  <% end %>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= render @notes %>
  </tbody>
</table>

<br>

<div id="pagination">
  <%= paginate @notes %>
</div>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Note', new_note_path, :class => "btn btn-default btn-lg" %>
<% end %>
<br>
